            <Font name="System Bold" size="13.0" />
         </font>
      </TitledPane>
      <TitledPane animated="false" collapsible="false" layoutX="394.0" layoutY="14.0" prefHeight="150.0" prefWidth="315.0" text="%job.cronWay.title">
         <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="130.0" prefWidth="195.0">
               <children>
                  <TextField fx:id="cronExpressionTextField" layoutX="131.0" layoutY="44.0" />
                  <Label layoutX="14.0" layoutY="49.0" text="%job.cronWay.cronExp" />
               </children>
            </AnchorPane>
         </content>
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </TitledPane>
      <Button fx:id="scheduleButton" layoutX="343.0" layoutY="168.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="95.0" text="%job.schedule" textFill="#24bf31">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
