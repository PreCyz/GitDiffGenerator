                  <Label layoutX="10.0" layoutY="52.0" text="Hour of the day" />
                  <Label layoutX="10.0" layoutY="89.0" text="Day of week" />
                  <RadioButton fx:id="everyMonthRadioButton" layoutX="269.0" layoutY="10.0" mnemonicParsing="false" text="%job.clickWay.everyMonth">
                     <toggleGroup>
                        <ToggleGroup fx:id="triggerOptionsToggleGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="every2WeeksRadioButton" layoutX="269.0" layoutY="37.0" mnemonicParsing="false" text="%job.clickWay.every2Weeks" toggleGroup="$triggerOptionsToggleGroup" />
