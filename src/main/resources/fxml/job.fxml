<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="210.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TitledPane animated="false" collapsible="false" layoutX="10.0" layoutY="14.0" text="%job.clickWay.title">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="120.0" prefWidth="378.0">
               <children>
                  <ComboBox fx:id="dayNameComboBox" layoutX="101.0" layoutY="85.0" prefWidth="117.0" />
                  <ComboBox fx:id="dayOfMonthComboBox" layoutX="101.0" layoutY="9.0" prefWidth="60.0" />
