<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="675.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <TableView fx:id="projectsTableView" layoutX="14.0" layoutY="14.0" prefHeight="330.0" prefWidth="649.0">
            <columns>
                <TableColumn editable="false" prefWidth="161.0" sortable="false" text="%projects.column.name" />
                <TableColumn editable="false" prefWidth="103.0" sortable="false" text="%projects.column.vcsType" />
                <TableColumn editable="false" prefWidth="382.0" sortable="false" text="%projects.column.path" />
            </columns>
        </TableView>
        <Button fx:id="searchProjectsButton" layoutX="14.0" layoutY="354.0" mnemonicParsing="false" text="%projects.button.search" textFill="BLUE">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Button>
        <Button fx:id="removeProjectButton" layoutX="626.0" layoutY="355.0" mnemonicParsing="false" prefWidth="37.0" style="-fx-background-image: url('./img/red-minus.png'); -fx-background-size: 30px; -fx-background-repeat: no-repeat; -fx-background-position: 50%;">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
        <Button fx:id="addProjectButton" layoutX="578.0" layoutY="355.0" mnemonicParsing="false" prefWidth="40.0" style="-fx-background-image: url('./img/green-plus.png'); -fx-background-size: 30px; -fx-background-repeat: no-repeat; -fx-background-position: 50%;">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
      <Button fx:id="saveButton" layoutX="158.0" layoutY="354.0" mnemonicParsing="false" text="%projects.button.save" textFill="BLUE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
